{
  "compilerOptions": {
    "outDir": "lib/esm",
    "strictNullChecks": false,
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "es6", 
      "es2016", 
      "es2017",
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "declaration": true,
    "rootDir": "./src",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "index.d.ts",
    "module.d.ts"
  ],
  "exclude": ["node_modules", "lib", "dist/esm"],
  "paths": {
    "*": ["src/*"]
  }
}

